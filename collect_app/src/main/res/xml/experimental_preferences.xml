<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title="@string/experimental">

    <Preference
        android:icon="@drawable/ic_outline_settings_applications_accent_24"
        android:key="dev_tools"
        android:title="@string/dev_tools"
        app:persistent="false" />

    <SwitchPreference
        android:key="mlkit_scanning"
        android:summary="@string/mlkit_is_always_used_for_scanning_project_qr_codes"
        android:title="@string/use_mlkit_for_barcode_scanning"
        app:iconSpaceReserved="false" />

    <SeekBarPreference
        android:key="mlkit_scan_threshold"
        android:max="20"
        android:title="@string/mlkit_scan_threshold"
        app:iconSpaceReserved="false"
        app:min="1"
        app:showSeekBarValue="true" />

    <PreferenceCategory
        android:title="@string/entities_title"
        app:allowDividerAbove="false"
        app:allowDividerBelow="false"
        app:iconSpaceReserved="false">

        <Preference
            android:key="entities"
            android:title="@string/entity_browser_button"
            app:iconSpaceReserved="false"
            app:persistent="false" />

    </PreferenceCategory>

</PreferenceScreen>
